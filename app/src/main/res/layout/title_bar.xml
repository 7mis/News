<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_red_bg">

    <!--菜单按钮-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip">

        <!--menu-->
        <ImageView
            android:id="@+id/iv_basepage_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_menu" />

        <!--arrow-->
        <ImageView
            android:id="@+id/iv_basepage_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:visibility="gone" />
    </FrameLayout>

    <!--标题-->
    <TextView
        android:id="@+id/tv_basepage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <!--photo listview or gridView-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:orientation="horizontal">

        <!--gridbutton-->
        <ImageView
            android:id="@+id/iv_basepage_gridlistbutton"
            android:src="@drawable/icon_pic_grid_type"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--字体大小-->
        <ImageView
            android:id="@+id/iv_basepage_textsize"
            android:src="@drawable/icon_textsize"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--分享-->
        <ImageView
            android:id="@+id/iv_basepage_share"
            android:src="@drawable/icon_share"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>