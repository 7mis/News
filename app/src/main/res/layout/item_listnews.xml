<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--新闻图片-->
    <ImageView
        android:id="@+id/iv_item_listnews_pic"
        android:background="#33000000"
        android:padding="1dip"
        android:scaleType="fitXY"
        android:src="@drawable/news_pic_default"
        android:layout_width="120dip"
        android:layout_height="80dip" />

    <!--新闻标题和时间-->
    <TextView
        android:id="@+id/tv_item_listnews_title"
        android:layout_toRightOf="@id/iv_item_listnews_pic"
        android:text="三生三世十里桃花，三生三世十里桃花"
        android:layout_margin="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_item_listnews_time"
        android:layout_alignBottom="@id/iv_item_listnews_pic"
        android:layout_alignLeft="@id/tv_item_listnews_title"
        android:layout_marginBottom="5dip"
        android:layout_toRightOf="@id/iv_item_listnews_pic"
        android:text="2000-10-14 14:14:14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_margin="5dip"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_item_listnews_pic"
        android:src="@drawable/icon_news_comment_num"
        android:id="@+id/iv_item_listnews_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>